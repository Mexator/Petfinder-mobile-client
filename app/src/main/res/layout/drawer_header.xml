<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/drawer_header_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_host__header_height"
        android:background="@color/colorPrimaryDark"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drawer_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="36sp"

        app:layout_constraintBottom_toTopOf="@id/drawer_header_email"
        app:layout_constraintStart_toStartOf="parent"

        tools:text="Sample Name" />

    <TextView
        android:id="@+id/drawer_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="@+id/drawer_header_bg"
        app:layout_constraintStart_toStartOf="parent"

        tools:text="sample@name.com" />
</androidx.constraintlayout.widget.ConstraintLayout>
